<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Trending Topics GitHub</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="container">
        <div class="jumbotron">
            <h1>GitHub Trending Topics</h1>
        </div>
        <div class="navbar navbar-inverse">
            <div class="container">
                <br/>
                <div class="col-md-4">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <p class="panel-title">Buscar Repositórios</p>
                        </div>
                        <div class="panel-body">
                            @using (Html.BeginForm("Index", "Trendings", FormMethod.Get, new { @class = "form-inline" }))
                            {
                                <input type="text" class="form-control" name="busca" placeholder="Buscar por..." />
                            }
                        </div>
                    </div>
                </div>
                <div class="navbar-header col-md-8">
                    @Html.ActionLink("Início", "Index", "Trendings", null, new { @class = "navbar-brand" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                @RenderBody()
            </div>
        </div>
        </div>

    <hr />

    <footer>
        <p>&copy; @DateTime.Now.Year - GitHub Trending</p>
    </footer>

        <script src="~/Scripts/jquery-1.10.2.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>